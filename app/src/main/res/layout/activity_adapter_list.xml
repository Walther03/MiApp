<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdapterList">



    <android.support.v7.widget.CardView

        android:layout_marginTop="10dp"
        android:background="#b1000001"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >


        <ImageView

            android:id="@+id/imgLocalAdapter"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />


        <TextView
            android:background="#B1000001"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="43dp"
            android:id="@+id/twNombreLocalAdapater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Local"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/imgLocalAdapter"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:orientation="horizontal">





            <LinearLayout
                android:background="#B1000001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="CAPACIDAD"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="1dp"
                    android:text="PRECIO"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:textStyle="italic" />

            </LinearLayout>


            <LinearLayout

                android:background="#B1000001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/twCapacidadLocalAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="1dp"
                        android:text="25"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/textView6"
                        app:layout_constraintTop_toBottomOf="@+id/twNombreLocalAdapater" />


                    <TextView

                        android:id="@+id/twPrecioLocalAdapater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="1dp"
                        android:text="12"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/textView6"
                        app:layout_constraintTop_toBottomOf="@+id/twNombreLocalAdapater" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>